{
  "name": "react-simple-boilerplate",
  "version": "0.0.1",
  "description": "Boilerplate repo for starting ReactJS apps. Mostly for personal use and sandboxing.",
  "main": "src/app.js",
  "scripts": {
    "lint": "eslint -c .eslintrc public src --ext .js,.jsx",
    "build": "webpack --progress --colors",
    "start": "webpack-dev-server --progress --colors --content-base public",
    "test": "jest --watch"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-dom",
      "<rootDir>/node_modules/react-addons-test-utils"
    ],
    "testDirectoryName": "test",
    "testFileExtensions": [
      "js",
      "jsx"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cooperka/react-simple-boilerplate.git"
  },
  "author": "Kevin Cooper",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cooperka/react-simple-boilerplate/issues"
  },
  "homepage": "https://github.com/cooperka/react-simple-boilerplate#readme",
  "devDependencies": {
    "babel-core": "^6.1.2",
    "babel-eslint": "^4.1.4",
    "babel-jest": "^5.3.0",
    "babel-loader": "^6.0.1",
    "babel-preset-es2015": "^6.1.2",
    "babel-preset-react": "^6.1.2",
    "eslint": "^1.9.0",
    "eslint-config-airbnb": "^1.0.0",
    "eslint-plugin-react": "^3.8.0",
    "jest-cli": "^0.7.1",
    "node-sass": "^3.4.1",
    "react": "^0.14.2",
    "react-addons-test-utils": "^0.14.2",
    "react-dom": "^0.14.2",
    "sass-loader": "^3.1.1",
    "webpack": "^1.12.3",
    "webpack-dev-server": "^1.12.1",
    "webpack-hot-middleware": "^2.4.1"
  }
}
